<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Search Suite" parallel="tests">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
    </listeners>
    <!-- Test 1: Login with Chrome -->
    <test name="Search Book by name with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchFunctionalityTest">
                <methods>
                    <include name="searchByName"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Empty search with Chrome" enabled="true">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.EmptySearchTest">
                <methods>
                    <include name="emptySearchTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>