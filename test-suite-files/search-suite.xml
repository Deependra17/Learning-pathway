<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Search Suite" parallel="tests">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
    </listeners>
    <!-- Test 1: Login with Chrome -->
    <test name="Search Book by name with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchByName">
                <methods>
                    <include name="searchByName"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Empty search with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.EmptySearch">
                <methods>
                    <include name="emptySearch"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search with Special characters Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchBySpecialCharacters">
                <methods>
                    <include name="searchWithSpecialCharacter"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search sql query" enabled="true" >
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SqlInjection">
                <methods>
                    <include name="securityTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="search by language with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchByLanguage">
                <methods>
                    <include name="searchBookByLanguage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Filter search by category" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.bycategory.SearchLocatorsBookByCategory">
                <methods>
                    <exclude name="bookSearchByCategoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Filter search by category with level" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.byreadinglevel.SearchLocatorsBookByReadingLevel">
                <methods>
                    <exclude name="searchBookByCategoryWithLevel"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>