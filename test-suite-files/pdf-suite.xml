<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Pdf generation " parallel="tests">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
    </listeners>
    <!-- Test 1: Test with Chrome -->
    <test name="Test with Chrome" enabled="true">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="generatePdf.PDFValidationTest">
                <methods>
                    <include name="testPDFValidation"/>
                </methods>
            </class>
        </classes>
    </test>
    <!-- Test 2: Test  with Firefox -->
    <test name="Login with Firefox" parallel="true" enabled="false">
        <parameter name="browser" value="FireFox"/>
        <classes>
            <class name="generatePdf.PDFValidationTest">
                <methods>
                    <include name="testPDFValidation"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
