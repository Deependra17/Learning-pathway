<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Filter Search" thread-count="2">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
<!--        <listener class-name="utils.RetryAnalyzer"/>-->
    </listeners>
    <!-- Test 1: Login with Chrome -->
    <test name=" Filter Search by language" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="testcases.bycategory.filtersearch.bylanguage.SearchBookByLanguage">
                <methods>
                    <include name="bookSearchByLanguage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search by category" enabled="true">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="bycategory.SearchBookByCategory">
                <methods>
                    <include name="bookSearchByCategoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search by reading level" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="testcases.bycategory.filtersearch.byreadinglevel.SearchBookByReadingLevel">
                <methods>
                    <include name="searchBookByReadingLevelTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="search book by audio" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="testcases.bycategory.filtersearch.byaudio.SearchBookByAudio">
                <methods>
                    <include name="searchBookByAudio"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="search book by country of origin" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="testcases.bycategory.filtersearch.bycountryoforigin.SearchByCountryOfOriginTest">
                <methods>
                    <include name="searchBookByCountryOfOrigin"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>