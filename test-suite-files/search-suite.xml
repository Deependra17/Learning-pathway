<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Search Suite">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
    </listeners>
    <!-- Test 1: Login with Chrome -->
    <test name="Search Book by name with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchByNameTest">
                <methods>
                    <include name="searchByName"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Empty search with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.EmptySearchTest">
                <methods>
                    <include name="emptySearch"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Invalid search with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchSpecialCharactersTest">
                <methods>
                    <include name="searchWithSpecialCharacter"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Text length boundary search with Chrome" enabled="true" >
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SqlInjectionTest">
                <methods>
                    <include name="securityTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="search by language with Chrome" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="search.SearchByLanguageTest">
                <methods>
                    <include name="searchBookByLanguage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Filter search by category" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.bycategory.SearchByCategoryTest">
                <methods>
                    <exclude name="bookSearchByCategoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Filter search by category with level" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.byreadinglevel.SearchBookByReadingLevelTest">
                <methods>
                    <exclude name="searchBookByCategoryWithLevel"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>