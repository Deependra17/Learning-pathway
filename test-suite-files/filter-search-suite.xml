<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Login Suite -->
<suite name="Filter Search" thread-count="2">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.FailedReporter"/>
    </listeners>
    <!-- Test 1: Login with Chrome -->
    <test name=" Filter Search by language" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.bylanguage.SearchBookByLanguageTest">
                <methods>
                    <include name="bookSearchByLanguage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search by category" enabled="false">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.bycategory.SearchByCategoryTest">
                <methods>
                    <include name="bookSearchByCategoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search by reading level" enabled="true">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="filtersearch.byreadinglevel.SearchBookByReadingLevelTest">
                <methods>
                    <include name="searchBookByReadingLevelTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>